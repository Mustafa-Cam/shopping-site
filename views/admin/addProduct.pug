                //-     .col-sm-10
                //-         select(type="text" name="categoryid").form-control#categoryid        
                //-             option(value="-1")
                //-             each category in categories 
                //-                 option(value=`${category.id}` ) #{category.name}
                .form-group.row
                    label.col-sm-2.col-form-label brand
                    .col-sm-10
                        input(type="text" name="brand").form-control#brand
                                    
                .form-group.row
                    .col-sm-10.offset-sm-2                       
                        input.btn.btn-primary(type="submit" value="save product")
