extends ../layout/layout.pug

block styles 
        link(rel="stylesheet" href="/css/forms.css")
block content
            if errorMessage
                div.alert.alert-danger.col-sm-7 !{errorMessage}
            form(action="/addproduct" method="post" enctype="multipart/form-data")
                input(type="hidden",value=`${csrfToken}` name="_csrf")
                .form-group.row
                    label.col-sm-2.col-form-label Product name
                    .col-sm-10
                        input(type="text" name="name").form-control#name
                .form-group.row
                    label.col-sm-2.col-form-label price
                    .col-sm-10
                        input(type="text" name="price").form-control#price
                .form-group.row
                    label.col-sm-2.col-form-label image
                    .col-sm-10
                        input(type="file" name="image").form-control-file#image
                //- .form-group.row
